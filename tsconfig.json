{
    "include": ["./src/**/*.ts"],
    "compilerOptions": {
      "target": "ES2022",
      "module": "Node16",
      "moduleResolution": "Node16",                 
      "outDir": "bin",
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
}