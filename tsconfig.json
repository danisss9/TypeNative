{
    "include": ["./src/**/*.ts"],
    "compilerOptions": {
      "target": "es2020",
      "module": "esnext",
      "moduleResolution": "Node16",                 
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
}